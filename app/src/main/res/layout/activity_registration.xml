<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/login_main_background"
    tools:context="mcteamgestapp.momo.com.mcteamgestapp.Moduli.Login.RegistrationActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout2"
        android:layout_marginTop="67dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/register_name"
            android:layout_marginTop="58dp"
            android:hint="Nome"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/editText3" />

        <EditText
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/registrer_username"
            android:hint="Cognome"
            android:layout_alignBaseline="@+id/register_name"
            android:layout_alignBottom="@+id/register_name"
            android:layout_toEndOf="@+id/register_name" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText3"
            android:layout_marginTop="15dp"
            android:hint="Email"
            android:layout_below="@+id/register_name"
            android:layout_alignStart="@+id/editText" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_marginTop="15dp"
            android:hint="Telefono"
            android:layout_below="@+id/editText3"
            android:layout_alignStart="@+id/editText2" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:layout_marginTop="15dp"
            android:hint="Luogo Nascita"
            android:layout_below="@+id/editText"
            android:layout_alignStart="@+id/editText4"
            android:layout_alignEnd="@+id/editText4" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editText4"
            android:layout_below="@+id/editText2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:hint="Data Nascita"
            android:layout_marginBottom="10dp" />

    </RelativeLayout>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Invia "
        android:id="@+id/button"
        android:textColor="@color/white"
        android:background="@drawable/register_gradient_button"

        android:layout_marginTop="70dp"
        android:layout_below="@+id/relativeLayout2"
        android:layout_alignEnd="@+id/relativeLayout2"
        android:layout_marginEnd="28dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Annulla"
        android:id="@+id/button3"
        android:textColor="@color/white"
        android:background="@drawable/abort_registration"
        android:layout_alignBottom="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp" />
</RelativeLayout>
