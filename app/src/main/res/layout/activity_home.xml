<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mcteamgestapp.momo.com.mcteamgestapp.Moduli.Login.Home.HomeActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <FrameLayout
                android:layout_width="169dp"
                android:layout_height="150dp"
                android:background="#003399"
                android:layout_weight="0.48">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Sistemi"
                    android:id="@+id/frame_sistemi"
                    android:layout_gravity="center"
                    android:textColor="@color/white" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="185dp"
                android:layout_height="150dp"
                android:background="#980493"></FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <FrameLayout
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:background="#664433"
                android:id="@+id/frame_commerciale"
                android:layout_weight="0.08"></FrameLayout>

            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="150dp"
                android:background="#44ff11"
                android:layout_weight="0.84"></FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:background="#ff1122"></FrameLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
